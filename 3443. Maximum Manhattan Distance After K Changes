class Solution {
public:
    int maxDistance(string s, int k) {
        int n = s.size() ; 
        int cnt = 0 ; 
        int dist =0 ; 
        int north = 0 , south = 0 , east = 0 , west = 0 ; 
        for(int i =0  ; i <n ; i++) {
            char x = s[i]; 
            if(x == 'N') {
                north++ ; 
            }
            if(x == 'S') {
                south++ ; 
            }
            if(x == 'E') {
                east++ ; 
            }
            if(x == 'W') {
                west++ ; 
            }
            
            int d = abs(north - south) + abs(east - west) + 2 * k;
            dist = max(dist, min(d, i + 1));         
        }


        return dist ; 

    }
};
