class Solution {
public:
    vector<vector<int>> res;

    void helper(int s , int k , int n , vector<int>& path , int sum) {
        if(path.size() == k) {
            if(sum == n) {
                res.push_back(path); 
            }
            return  ;
        }

        for(int i = s ; i <=9 ; i++) {
            if(sum + i >n) {
                break ; 
            }
            path.push_back(i); 
            helper(i + 1 , k , n , path , sum + i);
            path.pop_back();  
         }

    }

    vector<vector<int>> combinationSum3(int k, int n) {
        vector<int> path;
        helper(1, k, n, path, 0);
        return res;
    }
};
